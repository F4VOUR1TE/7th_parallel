<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		
		padding: 50
		spacing: 20

		#Label: 
			#id: my_label
			#text: "Hello World!"
			#font_size: 32
		
		Button:
			# text: "Hello"
			# font_size: 32
			size_hint: (1, .3)
			pos_hint: {'center_x': 0.5}
			background_color: 0,0,0,0

			on_press: root.hello_on()
			on_release: root.hello_off()

			Image:
				id: my_image
				source: '+.png'
				center_x: self.parent.center_x
				center_y: self.parent.center_y
				size: root.width, root.height

<Button@Button>
	background_color: (0,0,0,0)
	#background_normal: '+.png'
	canvas.before:
		Color:
			rgba: (48/255,84/255,150/255,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [10]